<div class="js-navbar-modal-valuation-modal modal-background modal--hidden">
  <main class="js-modal-content modal-content">
      <button class="modal-closeBtn js-modal-closeBtn"><i class="fa fa-times" aria-hidden="true"></i></button>

      <script>
        var valuationFormConfig = {
          // Load valuation Modal from server
          onLoad: function (xdiv) {
            var req = new XMLHttpRequest();
            req.open('GET', '/valuation', true);
            req.send();
            req.onreadystatechange =function () {
              if (req.readyState == 4 && req.status == 200) {
                xdiv.innerHTML = req.responseText;
              }
            };
          }
        }
      </script>
      <x-div data-controller="/scripts/fl-form.js" data-config="valuationFormConfig"></x-div>

  </main>
